.inst-box
  %header
    %strong
      = f.label :status
    %p.desc
      = t('.description')

  = field_set_tag do
    - if f.object.new_record?
      = f.select :status, Service.status.options, { selected: 'active' }, class: 'form-control'
    - else
      = f.select :status, Service.status.options, {}, class: 'form-control'
