= field_set_tag do
  = f.label :attention, 'Attention'
  = f.text_field :attention, maxlength: 255, title: "Type the preferred recipient for mail correspondance. Max length of 255 characters.", class: 'span5'
  = f.label :street, 'Street'
  = f.text_field :street, title: "Type the street address for mail correspondance"
  %br
  = f.label :city, 'City'
  = f.text_field :city, maxlength: 255, title: "Type the city name for mail correspondance"
  %br
  = f.label :state, 'State (2-letter abbreviation)'
  = f.text_field :state, maxlength: 2, title: "Type the two letter state abbreviation for the mailing address", class: 'span1'
  %br
  = f.label :zip, 'ZIP Code'
  = f.text_field :zip, maxlength: 5, title: "Type the five digit zip code for the mailing address", class: 'span2'
  = f.hidden_field :_destroy
  %br
  = link_to 'Delete this mailing address permanently', '#', class: 'btn btn-danger delete_association'
