= field_set_tag do
  .form-group
    = f.label :attention, 'Attention'
    .row
      .col-sm-6
        = f.text_field :attention, maxlength: 255, class: 'form-control'
  .form-group
    = f.label :street, 'Street'
    .row
      .col-sm-6
        = f.text_field :street, class: 'form-control'
  .form-group
    = f.label :city, 'City'
    .row
      .col-sm-6
        = f.text_field :city, maxlength: 255, class: 'form-control'
  .form-group
    = f.label :state, 'State (2-letter abbreviation)'
    .row
      .col-sm-2
        = f.text_field :state, maxlength: 2, class: 'form-control'
  .form-group
    = f.label :zip, 'ZIP Code'
    .row
      .col-xs-4
        = f.text_field :zip, maxlength: 10, class: 'form-control'
  = f.hidden_field :_destroy
  = link_to 'Delete this mailing address permanently', '#', class: 'btn btn-danger delete_association'
