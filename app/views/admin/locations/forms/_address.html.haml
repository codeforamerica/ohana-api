.inst-box.address
  %header
    %strong
      = f.label :address
    %span.desc
      = t('.description')

  = f.fields_for :address do |builder|
    = render 'admin/locations/forms/address_fields', f: builder
  - unless @location.address.present?
    = link_to_add_fields t('admin.buttons.add_street_address'), f, :address
