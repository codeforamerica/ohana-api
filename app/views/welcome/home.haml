  .jumbotron{style: "min-height:600px"}
    %h2.title Configure your app
    .row
      .col-lg-4
        %ul#welcomeTabs.list-unstyled
          %li.active
            %a.c{href: '#preparation'}
              %h3
                Prepare your data
                %span.pull-right=fa_icon "database"
          %li
            %a.c{href: '#upload'}
              %h3
                Upload your data
                %span.pull-right=fa_icon "upload"
          %li
            %a.c{href: '#users'}
              %h3
                Create users
                %span.pull-right=fa_icon "users"
      .col-lg-8
        .tab-content
          #preparation.tab-pane.fade.in.active
